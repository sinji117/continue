<%= link_to 'top', root_path, class: "subtitle" %>
<%= link_to '記録する', users_path, class: "subtitle" %>
<%= link_to '週間記録', user_path(current_user), class: "subtitle" %>
<%= link_to '平均値', edit_user_path(current_user), class: "subtitle" %>
 <div class='item-contents'>
    <h2 class='title'>
    <%= form_with(url: "#", local: true, method: :get, class: "search-form") do |form| %>
      <%= form.text_field :keyword, placeholder: "今まで食べた物は検索！", class: "search-input" %>
      <%= form.submit "検索", class: "search-btn" %>
    <% end %>
    </h2>
    <h2 class='title'>
    <%= link_to '初めての食べ物はこちらから🔘', new_food_path, class: "black-btn" %>
    </h2>
</div> 
  <% kcal = 0 %>
  <% money = 0 %>
  <% @food.each do |food| %>
    <% kcal += food.kcal %>
    <% money += food.money %>
  <% end %>
<div class='index-title'>
    <h2 class='service-title'>
    <% if  current_user.metabolism.to_i - kcal < 0 || current_user.day_money - money < 0 %>
      <%= "#{current_user.name}さん敗北しています"%>
    <% else current_user.metabolism.to_i - kcal > 1 && current_user.day_money - money > 1 %>
      <%= "#{current_user.name}さん勝っています！"%>
    <% end %>
      
    </h2>
    <h2 class='service-title'>
      <%= "本日残り#{current_user.metabolism.to_i - kcal }kcalです"%> <br>
      <%= "本日残り#{current_user.day_money- money }円です"%>
    </h2>
</div>